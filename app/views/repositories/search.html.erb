<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search" %>
<% end %>

<div>
  <% if @repos %>
    <ul>
      <% @repos.each do |repo| %>
      <li><%= link_to repo["html_url"], repo["html_url"] %> : <%= repo["description"] %> </li>
      <% end %>
    </ul>
  <% end %>
</div>
